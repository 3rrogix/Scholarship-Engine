{
  "manifest_version": 3,
  "name": "Scholarship Engine Dashboard",
  "version": "0.1.0",
  "description": "Manage Gemini API key, saved links, and your resume for scholarship automation.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
